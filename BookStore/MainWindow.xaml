<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="User_IdTxt" HorizontalAlignment="Center" Height="38" Margin="0,102,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="284"/>
        <TextBox x:Name="User_PasswordTxt" HorizontalAlignment="Center" Height="39" Margin="0,167,0,0" TextWrapping="Wrap" Text="PASSWORD" VerticalAlignment="Top" Width="284"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Height="62" Margin="258,245,0,0" VerticalAlignment="Top" Width="120" Click="LoginBtn_Click"/>
        <Button x:Name="RegisterBtn" Content="Register" HorizontalAlignment="Left" Height="62" Margin="422,245,0,0" VerticalAlignment="Top" Width="120" Click="RegisterBtn_Click" RenderTransformOrigin="0.558,-0.854"/>

    </Grid>
</Window>
